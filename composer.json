{
    "name": "canciolabs/php-functions",
    "description": "Functions that do not deserve a class or component. Not yet.",
    "type": "library",
    "keywords": ["functions", "php", "utilities", "helpers"],
    "homepage": "https://github.com/canciolabs/php-functions",
    "license": "MIT",
    "authors": [
        {
            "name": "Cancio Labs",
            "email": "canciolabs@gmail.com"
        },
        {
            "name": "Nilo Soares",
            "email": "nilosoares@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "webmozart/assert": "^1.10",
        "symfony/finder": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fzaninotto/faker": "^1.9"
    },
    "autoload": {
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CancioLabs\\Functions\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "tests": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage-html=coverage"
        ]
    }
}
